<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             targetNamespace="http://axians.com/eaf/workflow/test">

    <!-- Message definition for TestEntityCreated event (framework-local test type) -->
    <message id="TestEntityCreated" name="TestEntityCreated"/>

    <process id="simple-wait" name="Simple Wait for Event" isExecutable="true">

        <documentation>
            Simplified BPMN for testing Receive Event Task only.
            No DispatchAxonCommandTask - just Start → Wait → End
            Uses framework-local TestEntity types for independence from products.
        </documentation>

        <startEvent id="start" name="Start"/>

        <intermediateCatchEvent id="waitForEvent" name="Wait for TestEntity Created">
            <messageEventDefinition messageRef="TestEntityCreated"/>
        </intermediateCatchEvent>

        <endEvent id="end" name="End"/>

        <sequenceFlow id="flow1" sourceRef="start" targetRef="waitForEvent"/>
        <sequenceFlow id="flow2" sourceRef="waitForEvent" targetRef="end"/>

    </process>

</definitions>
